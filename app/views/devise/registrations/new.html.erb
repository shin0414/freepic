<div class="Account2">
  <div class="AccountPage">
    <div class="AccountPage__title">
      <h2> Create Account</h2>
      <h5> 新規アカウントの作成</h5>
      <%= render "devise/shared/links" %>
    </div>
    <div class="AccountPage__form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="FormField">
          <div class="FormField__label--normal">
            <%= f.label :name %>
          <div class="FormField__input--normal">
            <%= f.text_field :nickname, autofocus: true %>
          </div>
        </div>
        <div class="FormField">
          <div class="FormField__label--normal">
            <%= f.label :email %>
          </div>
          <div class="FormField__input--normal">
            <%= f.email_field :email %>
          </div>
        </div>
        <div class="FormField">
          <div class="FormField__label--normal">
            <%= f.label :password %>
            <i> (英数字8文字以上)</i>
          </div>
          <div class="FormField__input--normal">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>
        <div class="FormField">
          <div class="FormField__label--normal">
            <%= f.label :password_confirmation %>
          </div>
          <div class="FormField__input--normal">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Create Account", class: 'Button UserButton' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<footer>
  <p>
    <a href="/">Copyright フリピク 2020.</a>
  </p>
</footer>
