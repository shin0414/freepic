<div class="Account">
  <div class="AccountPage">
    <div class="AccountPage__title">
      <h2> Log in</h2>
      <h5> 登録しているユーザーでログイン</h5>
      <%= render "devise/shared/links" %>
    </div>
    <div class="AccountPage__form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="FormField">
          <div class="FormField__label--normal">
            <%= f.label :email %>
          </div>
          <div class="FormField__input--normal">
            <%= f.email_field :email, autofocus: true %>
          </div>
          <div class="FormField">
            <div class="FormField__label--normal">
              <%= f.label :password %>
              <i> (英数字8文字以上) </i>
            </div>
            <div class="FormField__input--normal">
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class: 'Button UserButton' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to new_user_registration_path, class: "post" do %>
      <p>新規登録</P>
    <% end %>
  </div>
</div>

<footer>
  <p>
    <a href="/">Copyright フリピク 2020.</a>
  </p>
</footer>

