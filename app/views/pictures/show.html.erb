<div class="pic_header">
  <div class="pic_info">
    <%= @picture.text %>
  </div>
  <div class="pic_destroy">
    <% if user_signed_in? && current_user.id == @picture.user_id %>
      <%= link_to place_picture_path(@place.id, @picture.id), method: :delete, local: true do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %>
  </div>
</div>
<div class="image">
  <%= image_tag @picture.src.url %>
</div>
<%= render "footer" %>