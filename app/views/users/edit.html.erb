<div class="Account">
  <div class="AccountPage">
    <div class="AccountPage__title">
      <h2> Edit Account</h2>
      <h5> アカウントの編集</h5>
      <%= link_to "Logout", '#', class: 'Button' %>
    </div>
    <div class="AccountPage__form">
      <%= form_for(current_user) do |f| %>
        <div class="FormField">
          <div class="FormField__label--normal">
            <%= f.label :name %>
          </div>
          <div class="FormField__input--normal">
            <%= f.text_field :nickname, autofocus: true %>
          </div>
        </div>
        <div class="FormField">
          <div class="FormField__label--normal">
            <%= f.label :email %>
          </div>
          <div class="FormField__input--normal">
            <%= f.email_field :email %>
          </div>
        </div>
        <%= f.submit "Update", class: 'Button UserButton' %>
      <% end %>
    </div>
  </div>
</div>
<%= render "footer" %>